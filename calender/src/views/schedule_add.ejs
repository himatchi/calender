<html>
    <head>
        <meta charset="UTF-8">
        <title><%= title %></title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> 
        <meta name="viewport" content="width=device-width, initial-scale=1" />    
    </head>
    <body>
        <div class="container-fluid">
        <div class="row">
        <div class="col-sm-12">
        <h1>予定の追加</h1>
        <%= username %>さん<br />
        <form action="/calender/create" method="post">
            <input type="hidden" name="year" value="<%= year %>">
            <input type="hidden" name="month" value="<%= month %>">
            <input type="hidden" name="date" value="<%= date %>">
            <div class="form-group">
                <label for="name">タイトル</label>
                <input id="name" type="text" name="name" class="form-control-inline" autofocus required>
            </div>
            <span id="timecontrol">
                <div class="form-group">
                    <label for="time">時間</label>
                    <input id="time" type="time" name="time" value="00:00" class="form-control-inline" required>
                    〜
                    <label for="end"></label>
                    <input id="end" type="time" name="end" value="00:00" class="form-control-inline" required>
                </div>
            </span>
            <span id="br" hidden>
                <br />
            </span>
            <div class="form-check">
                <label for="allday" class="form-check-label">終日</label>
                <input id="allday" type="checkbox" name="allday" class="form-check-input"><br />
            </div>
            <div class="form-group">
                <label for="category">カテゴリ</label>
                <select id="category" name="category" required>
                    <option value="社内作業">社内作業</option>
                    <option value="社外作業">社外作業</option>
                </select>
            </div>
            <div class="form-group">
                <label for="text">内容</label>
                <input id="text" type="text" name="text" class="form-control"><br />
            </div>
            <input type="submit" value="登録" class="btn btn-success">
            <input type="button" onclick="window.location.href = '/calender?year=<%= year %>&month=<%= month %>&day=<%= date %>'" value="キャンセル" class="btn btn-danger">
        </form>
        </div>
        </div>
        </div>
        <script type="text/javascript">
            window.addEventListener("DOMContentLoaded" , function(){
                var checkbox_allday = document.getElementById('allday');
                checkbox_allday.addEventListener("change", function(){
                    var time = document.getElementById('time');
                    var end = document.getElementById('end');
                    var timecontrol = document.getElementById('timecontrol');
                    var br = document.getElementById('br');
                    if(document.getElementById('allday').checked == true){
                        timecontrol.hidden = true;
                        br.hidden = false;
                    }else{
                        timecontrol.hidden = false;
                        br.hidden = true;
                    }
                })
            });
        </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>        
    </body>
</html>