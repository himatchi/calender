<html>
    <head>
        <meta charset="UTF-8">
        <title><%= title %></title>
    </head>
    <body>
        <h1>予定の変更</h1>
        <%= username %>さん<br />
        <form action="/calender/update" method="post">
            <input type="hidden" name="_id" value="<%= _id %>">
            <input type="hidden" name="year" value="<%= year %>">
            <input type="hidden" name="month" value="<%= month %>">
            <input type="hidden" name="date" value="<%= date %>">
            <label for="name">タイトル</label>
            <input id="name" type="text" name="name" value="<%= name %>" autofocus required><br />
            <span id="timecontrol" <%= allday == 'true' ? 'hidden' : '' %>>
            <label for="time">時間</label>
            <input id="time" type="time" name="time" value="<%= time_format_hhmm(time); %>" required>
            〜
            <label for="end"></label>
            <input id="end" type="time" name="end" value="<%= time_format_hhmm(end); %>" required>
            </span><br />
            <label for="allday">終日</label>
            <input id="allday" type="checkbox" name="allday" <%= allday == 'true' ? 'checked' : '' %>><br />
            <label for="category">カテゴリ</label>
            <select id="category" name="category" required>
                <option value="社内作業" <%= category == '社内作業' ? 'selected' : '' %>>社内作業</option>
                <option value="社外作業" <%= category == '社外作業' ? 'selected' : '' %>>社外作業</option>
            </select><br />
            <label for="text">内容</label>
            <input id="text" type="text" name="text" value="<%= text %>"><br />
            <input type="submit" value="登録">
            <input type="button" onclick="window.location.href = '/calender?year=<%= year %>&month=<%= month %>&day=<%= date %>'" value="キャンセル">
        </form>
        <script type="text/javascript">
            window.addEventListener("DOMContentLoaded" , function(){
                var checkbox_allday = document.getElementById('allday');
                checkbox_allday.addEventListener("change", function(){
                    var time = document.getElementById('time');
                    var end = document.getElementById('end');
                    if(document.getElementById('allday').checked == true){
                        timecontrol.hidden = true;
                    }else{
                        timecontrol.hidden = false;
                    }
                })
            });
        </script>
    </body>
</html>

<% 
function time_format_hhmm(date){
    let dt = new Date(date);
    let retval = "";
    retval += ('00' + dt.getHours()).slice(-2);
    retval += ':';
    retval += ('00' + dt.getMinutes()).slice(-2);
    return retval;
}
%>