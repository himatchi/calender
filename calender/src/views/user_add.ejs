<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf8">
        <title>新規登録</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> 
        <meta name="viewport" content="width=device-width, initial-scale=1" />        
        <script type="text/javascript">
            function checkSubmit(){
                const pw1 = document.getElementById('new-password').value;
                const pw2 = document.getElementById('confirm-password').value;
                const id = document.getElementById('id').value;
                const username = document.getElementById('username').value;
                if(pw1 != pw2){
                    document.getElementById('confirm-password-text').innerText = "パスワードが一致しません";
                    return false;
                }else{
                    return true;
                }
            }
        </script>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <h1>新規登録</h1>
                    <div style="min-width: min-content; max-width: fit-content; text-align: right">
                        <form action="/user/create" method="post">
                            <div class="form-group">
                                <label for="id">ID</label>
                                <input autocomplete="username" type="text" name="id" id="id" pattern="^[0-9a-zA-Z_]+$" placeholder="半角英数と_のみ" class="form-control-inline" required>
                            </div>
                            <div class="form-group">
                                <label for="username">表示名</label>
                                <input type="text" name="username" id="username" placeholder="画面に表示される名前(全角可)" class="form-control-inline" required>
                            </div>
                            <div class="form-group">
                                <label for="password">PW</label>
                                <input type="password" autocomplete="new-password" id="new-password" name="password" pattern="^.........*$" placeholder="8文字以上" class="form-control-inline" required>
                            </div>
                            <div class="form-group">
                                <label for="confirm">PW確認</label>
                                <input type="password" autocomplete="new-password" id="confirm-password" name="confirm" placeholder="確認のためもう一度入力" class="form-control-inline" required>
                            </div>
                            <div id="confirm-password-text" style="color: red; font-weight: bold"></div>
                            <input class="btn btn-primary" type="submit" value="新規登録" onclick="return checkSubmit()">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>        
    </body>
</html>
