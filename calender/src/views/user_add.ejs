<html>
    <head>
        <meta charset="utf8">
        <title>新規登録</title>
        <script type="text/javascript">
            function checkSubmit(){
                const pw1 = document.getElementById('new-password').value;
                const pw2 = document.getElementById('confirm-password').value;
                const id = document.getElementById('id').value;
                const username = document.getElementById('username').value;
                if(pw1 != pw2){
                    document.getElementById('confirm-password-text').innerText = "パスワードが一致しません";
                    return false;
                }else{
                    return true;
                }
            }
        </script>
    </head>
    <h1>新規登録</h1>
    <div style="min-width: min-content; max-width: fit-content; text-align: right">
        <form action="/user/create" method="post">
            <label for="id">ID</label>
            <input autocomplete="username" type="text" name="id" id="id" pattern="^[0-9a-zA-Z_]+$" placeholder="半角英数と_のみ" required><br />
            <label for="username">表示名</label>
            <input type="text" name="username" id="username" placeholder="画面に表示される名前(全角可)" required><br />
            <label for="password">PW</label>
            <input type="password" autocomplete="new-password" id="new-password" name="password" pattern="^.........*$" placeholder="8文字以上" required><br />
            <label for="confirm">PW確認</label>
            <input type="password" autocomplete="new-password" id="confirm-password" name="confirm" placeholder="確認のためもう一度入力" required><br />
            <div id="confirm-password-text" style="color: red; font-weight: bold"></div>
            <input type="submit" value="新規登録" onclick="return checkSubmit()">
        </form>
    </div>
</html>
